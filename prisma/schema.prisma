generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  name     String?
}

model Achievement {
  id                      Int     @id @default(autoincrement())
  iconPath                String
  type                    String
  isCompleted             Boolean
  ruTitle                 String
  enTitle                 String
  ruDescription           String
  enDescription           String
  ruAccomplishmentWay     String
  enAccomplishmentWay     String
}

model Booster {
  id              Int     @id @default(autoincrement())
  iconPath        String
  price           Int
  ruTitle         String
  enTitle         String
  ruDescription   String
  enDescription   String
}